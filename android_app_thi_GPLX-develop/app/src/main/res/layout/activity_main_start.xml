<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12"
    tools:context="androidvnua.vnua.mucdethi.BatDauThiThu.MainActivity_start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="0dp"
            android:contentDescription="@string/batdauthi"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:src="@drawable/dong_ho" />

        <TextView
            android:layout_weight="0.80"
            android:id="@+id/txtCountDown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="19:30"
            android:gravity="start"
            android:layout_gravity="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/txtSoDe"
            android:gravity="start"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:text="Đề"
            android:textSize="21sp"
            android:textStyle="bold"/>

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:text="@string/btn_back"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:backgroundTint="#FDAB32"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:orientation="vertical"
        android:weightSum="1">
        <TextView
            android:id="@+id/txtTienDo"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="0/20"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"/>
        <SeekBar
            android:id="@+id/tiendo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".4"
            android:thumb="@drawable/thumb"
            android:progressDrawable="@drawable/seekbartiendo"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listStart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10.5">
    </ListView>
</LinearLayout>